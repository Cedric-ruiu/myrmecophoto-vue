{
  "css.validate": false,
  "scss.validate": false,
  "prettier.enable": false,
  "eslint.useFlatConfig": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.formatOnSave": true,
  "stylelint.validate": ["css", "scss", "vue", "html"],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "package.json",
    "yarn.lock",
    "node_modules",
    "vscode-extension",
    ".git/{info,lfs,logs,refs,objects}/**",
    ".git/{index,*refs,*HEAD}",
    ".vscode",
    ".vscode-insiders",
    "public/_redirects"
  ],
  "cSpell.words": [
    "Antarea",
    "brunneus",
    "caespitum",
    "Camponotus",
    "capitatus",
    "Capitatus",
    "Cataglyphis",
    "cruentatus",
    "Dimage",
    "Dolichoderus",
    "flavus",
    "Formicidae",
    "fuliginosus",
    "fusca",
    "gyne",
    "gynes",
    "herculeanus",
    "Konica",
    "lasius",
    "Lasius",
    "ligniperdus",
    "messor",
    "Messor",
    "Myrmeco",
    "myrmécologique",
    "myrmécologiques",
    "Myrmecophoto",
    "Myrmica",
    "netlify",
    "nuxt",
    "pallidula",
    "Pheidole",
    "pilliscapus",
    "polyctena",
    "Polyergus",
    "prisma",
    "pswp",
    "quadripunctatus",
    "raynox",
    "Raynox",
    "rubra",
    "rufescens",
    "sanguinea",
    "sylvaticus",
    "Tetramorium",
    "truncatus",
    "unocss"
  ],
  "mdc.enableFormatting": true,
  "[md]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnPaste": true
  }
}
